[% PROCESS header.tt %]
<div id="content">

[% message %]

<h1>Update Meeting Settings </h1>
	<form method="post" action="[%c.uri_for('/meeting/') %][% meeting.id %]/update" >
		<label>Meeting Date</label>
		<input type="text" name="meeting_date" class="datetimeinput" value="[% meeting.datetime %]"><br />
		<label>Description</label>
		<textarea type="textfield" name="meeting_desc">[%meeting.description%] </textarea>
		<input name="meeting_up_submit" type="submit" value="Update Meeting" />
	</form>	

<h1> Advisors </h1>
<table>
<tr><th>Name</th><th>Contact</th><th>Confirmation Status</th></tr>
[% FOREACH adv IN advisors %]
<tr><th>[% adv.advisor.username %]</th><th>[% adv.advisor.email_address %]
</th><th>[% adv.confirmation.status %] </th></tr>
[% END %]
</table>

<h2> Add Advisor </h2>

<table>
<tr><th>Name</th><th>Contact</th><th></th></tr>
[% FOREACH adv IN possible_advisors %]
<tr>
<th>[%adv.username%]</th>
<th>[%adv.email_address%]</th>
<th><a href="[% assign_advisor_url %]/[%adv.id%]">Add Advisor</a></th></tr>


[% END %]
</table>

<h1> Comments </h1>
<table>
<tr><th>Comment</th><th>Commenter</th><th>Option</th></tr>
[% FOREACH com IN meeting.meeting_comments %]
<tr><th>[% com.comment %]</th><th>[% com.commenter.username %] </th>
<th> 
[% IF c.user.id == com.commenter_id %]
<a href="[% c.uri_for('/') %]/meeting/[% meeting.id %]/edit_comment/[% com.id %]">Edit Comment</a>
[% END %]
</th>
</tr>
[% END %]
</table>
<h2> Add Comment </h2>

	<form method="post" action="[% c.uri_for('/meeting/') %][%meeting.id%]/add_comment" class="sigPad">
		<label>Comment</label>
		<br />
		<textarea name="comment"></textarea><br />
		<label>Signature</label>

		<div class="sig sigWrapper">
			<div class="typed"></div>
			<canvas class="pad" width="198" height="55"></canvas>
			<input type="hidden" id="output" name="output" class="output">
		</div>
		<br />
		<input type="submit" name="submit_comment" value="Attach Signature"/>
	</form>
	
	<a href="[% c.uri_for('/meeting') %]/[% meeting.id %]/cancel" > Cancel Meeting </a>
</div>
[% PROCESS signature_footer.tt %]
[% PROCESS datetime_footer.tt %]
[% PROCESS footer.tt %]
